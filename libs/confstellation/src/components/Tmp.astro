---
import { Form } from "confstellation:components";
import config from "confstellation:config";
---

<div id="wrapper">
  <section>
    <div id="name">
      <div id="name-prefix">
        {config.conferenceName}
      </div>
      <div id="name-suffix">CONF</div>
    </div>
    <div id="date">
      {
        new Intl.DateTimeFormat("en-US", {
          dateStyle: "long",
        }).format(new Date(config.conferenceDate))
      } / The Internet.
    </div>
  </section>
  <Form />
</div>

<style>
  #wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-inline: var(--space-3xl);
  }

  #name {
    display: flex;
    flex-wrap: wrap;
    line-height: 1.3;
    div {
      font-family: sans-serif;
      font-weight: 800;
      font-style: normal;
      font-size: calc(var(--step-6) * 2.125);
    }
  }

  #date {
    font-family: sans-serif;
    font-weight: 800;
    font-style: normal;
    font-size: var(--step-2);
  }

  #name-prefix {
    text-transform: uppercase;
    color: var(--confstellation-accent);
  }

  #name-suffix {
    text-transform: uppercase;
  }
</style>
