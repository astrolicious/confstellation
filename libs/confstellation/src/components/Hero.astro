---
import config from "confstellation:config";

const { hero } = Astro.props;
---

<div id="wrapper">
  <section>
    <h1 id="name">{hero.name}</h1>

    <div id="tagline">
      {hero.tagline}
    </div>

    <div id="date">
      {
        new Intl.DateTimeFormat("en-US", {
          dateStyle: "long",
        }).format(new Date(hero.date))
      } / {hero.location}
    </div>
    <div id="actions">
      <slot name="actions" />
    </div>
  </section>
</div>

<style>
  #actions {
    display: grid;
    gap: 0.5rem;
  }
  #wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-inline: var(--space-3xl);
  }

  #name {
    display: flex;
    flex-wrap: wrap;
    line-height: 1.3;
    text-transform: uppercase;
    font-family: sans-serif;
    font-weight: 800;
    font-style: normal;
    font-size: var(--step-6);
  }

  #date {
    font-family: sans-serif;
    font-weight: 800;
    font-style: normal;
    font-size: var(--step-2);
  }
</style>
